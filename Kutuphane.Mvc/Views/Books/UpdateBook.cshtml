@model Kutuphane.Entities.Concrete.Book

@{
    ViewData["Title"] = "UpdateBook";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UpdateBook", "Books", FormMethod.Post))
{
    <div style="margin-bottom: 15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>Kitap ID</label>
            @Html.TextBoxFor(b => b.Id, new { @class = "form-control", @readonly = false })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(b => b.Name, new { @class = "form-control", required = "", placeholder = "Kitap Adı Giriniz..." })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kategori</label>
            @Html.DropDownListFor(b => b.CategoryId, (List<SelectListItem>)ViewBag.value, new { @class = "form-control", required = "" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yazar</label>
            @Html.DropDownListFor(b => b.AuthorId, (List<SelectListItem>)ViewBag.value2, new { @class = "form-control", required = "" })
        </div>
        <div style="margin-bottom: 15px">
            <label>Basım Yılı</label>
            @Html.TextBoxFor(b => b.YearofPublication, new { @class = "form-control", placeholder = "Basım Yılı Giriniz..." })
        </div>
        <div style="margin-bottom: 15px">
            <label>Yayın Evi</label>
            @Html.TextBoxFor(b => b.PublishingHouse, new { @class = "form-control", placeholder = "Yayın Evi Giriniz..." })
        </div>
        <div style="margin-bottom: 15px">
            <label>Sayfa Sayısı</label>
            @Html.TextBoxFor(b => b.Page, new { @class = "form-control", placeholder = "Sayfa Sayısı Giriniz..." })
        </div>
        <div>
            <button onclick="return confirm('Güncellemek İstediğinizden Emin misiniz?');" class="btn btn-warning">Güncelle</button>
        </div>
        <input type="hidden" name="Status" value="True" />
    </div>
}


@model Kutuphane.Entities.Concrete.Category
@{
    ViewData["Title"] = "Kategori Güncelle";
    Layout = "~/Views/Shared/Layout.cshtml";
}



@using (Html.BeginForm("UpdateCategory", "Categories", FormMethod.Post))
{
    <div style="margin-bottom: 15px"></div>
    <div class="form-group">
        <div style="margin-bottom: 15px">
            <label>Kategori ID</label>
            @Html.TextBoxFor(k => k.Id, new { @class = "form-control", @readonly = false })
        </div>
        <div style="margin-bottom: 15px">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(k => k.Name, new {@class = "form-control", placeholder = "Lütfen Güncellenecek Kategori Adını Giriniz...", required = ""})
        </div>
    </div>
    <div>
        <button onclick="return confirm('Güncellemek İstediğinizden Emin misiniz?');" class="btn btn-warning">Güncelle</button>
    </div>
}
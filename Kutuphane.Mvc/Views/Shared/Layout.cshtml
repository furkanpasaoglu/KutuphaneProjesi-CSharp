
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <title>@ViewData["Title"] - Kutuphane.MVC</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 16px;
        }

        .sidebar a {
            padding: 10px 14px 10px 10px;
            text-decoration: none;
            font-size: 20px;
            color: white;
            display: block;
        }

        .sidebar a:hover {
            color: #0094ff;
        }

        .main {
            margin-left: 240px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

            .sidebar a {
                font-size: 18px;
            }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#"> <i class="glyphicon glyphicon-home"></i> &nbsp; Ana Sayfa</a>
        <a href="/Categories/"><i class="glyphicon glyphicon-list"></i> &nbsp; Kategoriler</a>
        <a href="/Books/"><i class="glyphicon glyphicon-book"></i> &nbsp; Kitaplar</a>
        <a href="/Authors/"><i class="glyphicon glyphicon-pencil"></i> &nbsp; Yazarlar</a>
        <a href="/Members/"><i class="glyphicon glyphicon-user"></i> &nbsp; Üyeler</a>
        <a href="/Personals/"><i class="glyphicon glyphicon-tower"></i> &nbsp; Personeller</a>
        <a href="/Lend/Lend/"><i class="glyphicon glyphicon-circle-arrow-right"></i> &nbsp; Ödünç Kitap Ver</a>
        <a href="/Lend/Index/"><i class="glyphicon glyphicon-circle-arrow-left"></i> &nbsp; Ödünç Kitap Al</a>
        <a href="/Statistics/"><i class="glyphicon glyphicon-sort"></i> &nbsp; İstatistikler</a>
        <a href="#"><i class="glyphicon glyphicon-euro"></i> &nbsp; Kasa</a>
        <a href="/Operations/"><i class="glyphicon glyphicon-dashboard"></i> &nbsp; İşlemler</a>
        <a href="/Statistics/Weather/"><i class="glyphicon glyphicon-cloud"></i> &nbsp; Hava Raporu</a>
        <a href="/Statistics/CardWeather/"><i class="glyphicon glyphicon-plus"></i> &nbsp; Hava Kartları</a>
        <a href="/Statistics/Gallery/"><i class="glyphicon glyphicon-picture"></i> &nbsp; Galeri</a>
        <a href="/Showcase/"><i class="glyphicon glyphicon-gift"></i> &nbsp; Vitrin</a>
        <a href="#"><i class="glyphicon glyphicon-cog"></i> &nbsp; Ayarlar</a>
        <a href="#"><i class="glyphicon glyphicon-phone"></i> &nbsp; Yardım</a>
        <a href="#"><i class="glyphicon glyphicon-off"></i> &nbsp; Çıkış</a>
    </div>

<div class="main">
    <div style="margin-top: 15px;">
        @if (TempData["Mesaj"] !=null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Başarılı!</strong> @TempData["Mesaj"]
            </div>
        }
    </div>
    @RenderBody()
</div>

</body>
</html>
